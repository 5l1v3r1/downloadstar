{

  "manifest_version": 2,
  "name": "Download Star",
  "version": "1.0.2",

  "description": "Download all items in a webpage that match a pattern",

  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },

  "permissions": [
    "activeTab",
    "downloads",
    "storage"
  ],

  "browser_action": {
    "browser_style": false,
    "default_icon": "icons/icon.svg",
    "default_title": "Download Star",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "scripts": [
      "background/download.js"
    ]
  }

}
